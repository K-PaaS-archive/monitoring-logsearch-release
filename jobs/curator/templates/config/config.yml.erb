---
client:
  hosts: <%= p("curator.elasticsearch.hosts") %>
  port: <%= p("curator.elasticsearch.port") %>
  url_prefix:
  # use_ssl: False
  use_ssl: True
  certificate: /var/vcap/jobs/elasticsearch/config/root-ca.pem
  client_cert: /var/vcap/jobs/elasticsearch/config/kirk.pem
  client_key: /var/vcap/jobs/elasticsearch/config/kirk-key.pem
  # ssl_no_validate: False
  ssl_no_validate: True
  http_auth:
  timeout: 30
  master_only: False

logging:
  loglevel: <%= p('curator.loglevel') %>
  logfile:
  logformat: <%= p('curator.logformat') %>
  blacklist: ['elasticsearch', 'urllib3']
